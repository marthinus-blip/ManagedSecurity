<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <OutputType>Exe</OutputType>
    <PublishAot>true</PublishAot>
    <IsAotCompatible>true</IsAotCompatible>
    
    <!-- Fix for missing zlib dev package in build environment -->
    <LinkerArgs>$(LinkerArgs) -L$(MSBuildProjectDirectory)/../local_lib</LinkerArgs>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../ManagedSecurity.Common/ManagedSecurity.Common.csproj" />
    <ProjectReference Include="../ManagedSecurity.Core/ManagedSecurity.Core.csproj" />
  </ItemGroup>

</Project>
